<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" StackPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Server Results">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Label>
            <JFXListView fx:id="serverList" maxWidth="-Infinity" prefHeight="199.0" prefWidth="350.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </JFXListView>
            <HBox alignment="CENTER">
               <children>
                  <JFXButton fx:id="searchButton" style="-fx-background-color: #0aF;" text="Search">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton fx:id="directConnect" alignment="CENTER" style="-fx-background-color: #0af;" text="Direct">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </JFXButton>
               </children>
            </HBox>
         </children>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
